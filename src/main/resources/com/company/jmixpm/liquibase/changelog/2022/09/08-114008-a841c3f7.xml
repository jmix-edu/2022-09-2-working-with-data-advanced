<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="jmixpm">
        <createTable tableName="ARTICLE">
            <column name="ARTICLE_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ARTICLE"/>
            </column>
            <column name="CO_AUTHOR" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="jmixpm">
        <createTable tableName="BOOK">
            <column name="BOOK_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_BOOK"/>
            </column>
            <column name="PAGES" type="INT"/>
            <column name="PICTURE_COUNT" type="INT"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="jmixpm">
        <createTable tableName="PUBLICATION">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PUBLICATION"/>
            </column>
            <column name="DTYPE" type="VARCHAR(31)"/>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="AUTHOR" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="jmixpm">
        <addForeignKeyConstraint baseColumnNames="ARTICLE_ID" baseTableName="ARTICLE"
                                 constraintName="FK_ARTICLE_ON_ARTICLE" referencedColumnNames="ID"
                                 referencedTableName="PUBLICATION"/>
    </changeSet>
    <changeSet id="5" author="jmixpm">
        <addForeignKeyConstraint baseColumnNames="BOOK_ID" baseTableName="BOOK" constraintName="FK_BOOK_ON_BOOK"
                                 referencedColumnNames="ID" referencedTableName="PUBLICATION"/>
    </changeSet>
</databaseChangeLog>