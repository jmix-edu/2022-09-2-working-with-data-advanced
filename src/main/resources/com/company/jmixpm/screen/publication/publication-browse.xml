<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://publicationBrowse.caption"
        focusComponent="publicationsTable">
    <data readOnly="true">
        <collection id="publicationsDc"
                    class="com.company.jmixpm.entity.Publication">
            <fetchPlan extends="_base"/>
            <loader id="publicationsDl">
                <query>
                    <![CDATA[select e from Publication e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="publicationsTable" spacing="true">
        <filter id="filter"
                dataLoader="publicationsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="publicationsTable"
                    width="100%"
                    dataContainer="publicationsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="author"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="publicationsTable.create"/>
                <button id="editBtn" action="publicationsTable.edit"/>
                <button id="removeBtn" action="publicationsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
