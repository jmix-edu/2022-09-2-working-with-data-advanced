<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://articleBrowse.caption"
        focusComponent="articlesTable">
    <data readOnly="true">
        <collection id="articlesDc"
                    class="com.company.jmixpm.entity.Article">
            <fetchPlan extends="_base"/>
            <loader id="articlesDl">
                <query>
                    <![CDATA[select e from Article e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="articlesTable" spacing="true">
        <filter id="filter"
                dataLoader="articlesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="articlesTable"
                    width="100%"
                    dataContainer="articlesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="author"/>
                <column id="coAuthor"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="articlesTable.create"/>
                <button id="editBtn" action="articlesTable.edit"/>
                <button id="removeBtn" action="articlesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
