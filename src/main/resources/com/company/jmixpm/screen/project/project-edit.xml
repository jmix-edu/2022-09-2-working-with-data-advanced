<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://projectEdit.caption"
        focusComponent="form">
    <data>
        <instance id="projectDc"
                  class="com.company.jmixpm.entity.Project">
            <fetchPlan extends="_base">
                <property name="manager" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="participantsDc" property="participants"/>
            <collection id="taskDc" property="tasks"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="tabSheet">
        <form id="form" dataContainer="projectDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <dateField id="startDateField" property="startDate"/>
                <dateField id="endDateField" property="endDate"/>
                <entityPicker id="managerField" property="manager">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <comboBox id="statusField" property="status"/>
                <!--                <textArea id="projectLabelsField" property="projectLabels"-->
                <!--                          editable="false"/>-->
                <field id="projectLabelsField" editable="false" property="projectLabels"/>
                <textField id="totalEstimateddEffortsField" property="totalEstimateddEfforts"/>
            </column>
        </form>
        <tabSheet id="tabSheet" width="100%">
            <tab id="participantsTab"
                 caption="Participants"
                 margin="true"
                 expand="usersTable">
                <groupTable id="usersTable"
                            width="100%"
                            dataContainer="participantsDc">
                    <actions>
                        <action id="add" type="add"/>
                        <action id="exclude" type="exclude"/>
                        <action id="create" type="create"/>
                    </actions>
                    <buttonsPanel>
                        <button id="addBtn" action="usersTable.add"/>
                        <button id="excludeBtn" action="usersTable.exclude"/>
                        <button id="createBtn" action="usersTable.create"/>
                    </buttonsPanel>
                    <columns>
                        <column id="username"/>
                        <column id="firstName"/>
                        <column id="lastName"/>
                    </columns>
                </groupTable>
            </tab>
            <tab id="tasksTab" caption="Tasks"
                 margin="true"
                 expand="tasksTable">
                <groupTable id="tasksTable"
                            width="100%"
                            dataContainer="taskDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <buttonsPanel>
                        <button id="createBtn1" action="tasksTable.create"/>
                        <button id="editBtn" action="tasksTable.edit"/>
                        <button id="removeBtn" action="tasksTable.remove"/>
                    </buttonsPanel>
                    <columns>
                        <column id="name"/>
                        <column id="startDate"/>
                        <column id="estimatedEfforts"/>
                    </columns>
                </groupTable>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
            <button id="commitWithBeanValidation" caption="Commit with BV"/>
            <button id="performBeanValidation" caption="Perform BV"/>
        </hbox>
    </layout>
</window>
