<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://projectSnapshotBrowse.caption">
    <data>
        <collection id="projectsDc"
                    class="com.company.jmixpm.entity.Project">
            <fetchPlan extends="_base">
                <property name="manager" fetchPlan="_base"/>
                <property name="participants" fetchPlan="_base"/>
                <property name="tasks" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="projectsDl" cacheable="true">
                <query>
                    <![CDATA[select e from Project e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="splitter">
        <split id="splitter" width="100%" orientation="vertical">
            <table id="projectsTable"
                   width="100%"
                   height="100%"
                   dataContainer="projectsDc">
                <columns>
                    <column id="name"/>
                    <column id="startDate"/>
                    <column id="endDate"/>
                    <column id="manager"/>
                    <column id="status"/>
                    <column id="projectLabels"/>
                    <column id="totalEstimateddEfforts"/>
                </columns>
            </table>
            <fragment id="snapshotDiff"
                      width="100%"
                      height="100%"
                      screen="snapshotDiff"/>
        </split>
    </layout>
</window>